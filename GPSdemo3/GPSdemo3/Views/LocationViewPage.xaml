<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:GPSdemo3.ViewModels"
             x:Class="GPSdemo3.Views.LocationViewPage"
             Title="LocationViewPage">
    <ContentPage.BindingContext>
        <viewmodels:LocationViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Spacing="20">
        <Button Text="Your Location"
                BorderColor="Aqua"
                BorderWidth="2"
                Margin="0,-10,10,0"
                Padding="0"
                BackgroundColor="White"
                TextColor="Black"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                WidthRequest="150"
                FontSize="15"
                FontAttributes="Bold"
                Command="{Binding GetLocationCommand}" />

        <Label Text="{Binding DisplayLocation}"
               FontSize="12"
               HorizontalOptions="Center"
               TextColor="Black" />

        <Label Text="Writing Centres"
               FontSize="Medium"
               FontAttributes="Bold"
               Margin="10" />

        <ScrollView Orientation="Horizontal" HeightRequest="50">
            <StackLayout Orientation="Horizontal" Padding="10">
                <Button Text="First Location"
                        CommandParameter="First Location"
                        Clicked="OnLocationButtonClicked"
                        BorderColor="Aqua"
                        BorderWidth="2"
                        Margin="0,-10,10,0"
                        Padding="0"
                        BackgroundColor="White"
                        TextColor="Black"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"
                        WidthRequest="150"
                        FontSize="15"
                        FontAttributes="Bold" />
                <Button Text="Second Location"
                        CommandParameter="Second Location"
                        Clicked="OnLocationButtonClicked"
                        BorderColor="Aqua"
                        BorderWidth="2"
                        Margin="0,-10,10,0"
                        Padding="0"
                        BackgroundColor="White"
                        TextColor="Black"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"
                        WidthRequest="150"
                        FontSize="15"
                        FontAttributes="Bold" />
                <Button Text="Third Location"
                        CommandParameter="Third Location"
                        Clicked="OnLocationButtonClicked"
                        BorderColor="Aqua"
                        BorderWidth="2"
                        Margin="0,-10,20,0"
                        Padding="0"
                        BackgroundColor="White"
                        TextColor="Black"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"
                        WidthRequest="150"
                        FontSize="15"
                        FontAttributes="Bold" />
            </StackLayout>
        </ScrollView>

        <Label Text="Application Centres"
               FontSize="Medium"
               FontAttributes="Bold"
               Margin="10" />

        <ScrollView Orientation="Horizontal" HeightRequest="50">
            <StackLayout Orientation="Horizontal" Padding="10">
                <Button Text="First Location"
                        CommandParameter="First Location"
                        Clicked="OnLocationButtonClicked"
                        BorderColor="Aqua"
                        BorderWidth="2"
                        Margin="0,-10,10,0"
                        Padding="0"
                        BackgroundColor="White"
                        TextColor="Black"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"
                        WidthRequest="150"
                        FontSize="15"
                        FontAttributes="Bold" />
                <Button Text="Second Location"
                        CommandParameter="Second Location"
                        Clicked="OnLocationButtonClicked"
                        BorderColor="Aqua"
                        BorderWidth="2"
                        Margin="0,-10,10,0"
                        Padding="0"
                        BackgroundColor="White"
                        TextColor="Black"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"
                        WidthRequest="150"
                        FontSize="15"
                        FontAttributes="Bold" />
                <Button Text="Third Location"
                        CommandParameter="Third Location"
                        Clicked="OnLocationButtonClicked"
                        BorderColor="Aqua"
                        BorderWidth="2"
                        Margin="0,-10,20,0"
                        Padding="0"
                        BackgroundColor="White"
                        TextColor="Black"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"
                        WidthRequest="150"
                        FontSize="15"
                        FontAttributes="Bold" />
            </StackLayout>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>