<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GPSdemo3.Views.LocationViewPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:GPSdemo3.ViewModels">

    <ContentPage.BindingContext>
        <viewModels:LocationViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <Label Text="Current Position" FontSize="18" FontAttributes="Bold"/>

            <Button Text="My Location" Command="{Binding GetLocationCommand}" />

            <ActivityIndicator IsRunning="{Binding IsBusy}"
                               IsVisible="{Binding IsBusy}" />

            <Label Text="{Binding DisplayLocation}"
                   FontSize="16"
                   LineBreakMode="WordWrap" />

            <BoxView HeightRequest="1" Color="#ccc" Margin="0,20,0,10"/>


            <Label 
                Text="Nearest District Offices for Applications:" 
                FontSize="18" 
                FontAttributes="Bold" 
                Margin="10,20,10,5"
               />
            
            <Button 
                Text="Find Nearest District Office for Applications" 
                Command="{Binding FindNearestDistrictOfficesCommand}"
                Margin="10"
                BackgroundColor="#2196F3"
                TextColor="White"
                CornerRadius="5" />
                
            <CollectionView 
                ItemsSource="{Binding NearestDistrictOffices}"
                IsVisible="{Binding HasNearestDistrictOffices}"
                Margin="10,0">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10" Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            
                            <Label 
                                Text="{Binding DisplayText}" 
                                VerticalOptions="Center"
                                Grid.Column="0" />
                            
                            <Button 
                                Text="Route" 
                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:LocationViewModel}}, Path=OpenRouteToDistrictOfficeCommand}"
                                CommandParameter="{Binding .}"
                                BackgroundColor="#4CAF50"
                                TextColor="White"
                                CornerRadius="5"
                                Padding="15,5"
                                Grid.Column="1" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Label Text="Find Nearest Schools Which Are Writing Centres"
        FontSize="18"
        FontAttributes="Bold" />

            <Button Text="Find 3 Nearest Writing Centres"
         Command="{Binding FindNearestSchoolsCommand}"
         BackgroundColor="#2196F3"
         TextColor="White" />

            <CollectionView ItemsSource="{Binding NearestSchools}"
                IsVisible="{Binding HasNearestSchools}"
                Margin="0,10,0,0">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10" Margin="0,5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <VerticalStackLayout Grid.Column="0" Spacing="5">
                                <Label Text="{Binding Name}"
                            FontSize="16"
                            FontAttributes="Bold" />
                                <Label Text="{Binding DistanceKm, StringFormat='Distance: {0:F2} km'}"
                            FontSize="14"
                            TextColor="Gray" />
                            </VerticalStackLayout>

                            <Button Grid.Column="1"
                         Text="Navigate"
                         Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:LocationViewModel}}, Path=OpenRouteToSchoolCommand}"
                         CommandParameter="{Binding .}"
                         BackgroundColor="#4CAF50"
                         TextColor="White"
                         VerticalOptions="Center"
                         Padding="15,5"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
